<h1>User info</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, autfocus: true, placeholder: "プロフィール画像" %><br>
  <label for="inputName">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介"%><br>
  <%= f.submit "Update User" %>
<% end %>