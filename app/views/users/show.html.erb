<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/user_info', book: @book, user: @user %>
    </div>
  

<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @books.each do |book| %>
    <tr>
      <td><%= link_to (attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpeg"), user_path(@user.id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>
</div>