<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/user_info', book: @book, user: @user %>
    </div>


<div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-striped">
  <tr>
    <td>
      <%= link_to (attachment_image_tag @book_show.user, :profile_image, size: "100x100"), user_path(@user.id) %><br>
      <%= link_to @book_show.user.name, user_path(@user.id) %>
    </td>
    <td><%= link_to @book_show.title, book_path(@book_show.id) %></td>
    <td><%= @book_show.body %></td>
    <% if @book_show.user == current_user %>
      <td>
        <%= link_to "Edit", edit_book_path(@book_show.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book_show.id), method: :delete %>
      </td>
    <% end %>
  </tr>
</table>
</div>
  </div>
</div>